---
interface Props {
    experience: object
}

const {experience} = Astro.props
---

<div class="card">
    <time class="date">{experience.date}</time>

    <h3 class="role">{experience.title}</h3>
    <p class="company text-custom-green">{experience.company}</p>

    {experience.usos.length > 0 && (
            <ul class="stack">
                {experience.usos.map((tech) => (
                        <li>{tech}</li>
                ))}
            </ul>
    )}

    <p class="description">{experience.description}</p>
</div>

<style>
    /* ===== CARD ===== */

    .card {
        background: rgba(15, 23, 42, 0.95);
        border: 1px solid rgba(34, 197, 94, 0.25);
        border-radius: 16px;
        padding: 1.5rem;
    }

    .date {
        font-size: 0.8rem;
        opacity: 0.7;
    }

    .role {
        font-size: 1.2rem;
        margin-top: 0.25rem;
    }

    .company {
        font-weight: 500;
        margin-bottom: 0.75rem;
    }

    /* ===== STACK ===== */

    .stack {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
        margin-bottom: 0.75rem;
    }

    .stack li {
        font-size: 0.75rem;
        padding: 0.25rem 0.6rem;
        border-radius: 999px;
        background: rgba(34, 197, 94, 0.15);
        color: #6bb184;
    }

    .description {
        font-size: 0.9rem;
        line-height: 1.4;
        opacity: 0.85;
    }

    /* ===== SCROLLBAR ===== */

    .timeline::-webkit-scrollbar {
        height: 6px;
    }

    .timeline::-webkit-scrollbar-thumb {
        background: rgba(34, 197, 94, 0.6);
        border-radius: 999px;
    }
</style>