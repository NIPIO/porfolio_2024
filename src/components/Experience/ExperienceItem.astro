---
interface Props {
    experience: {
        date: string
        title: string
        company: string
        usos: string[]
        description: string
        aprendizajes?: string
    }
}

const {experience} = Astro.props
---

<div class="card">
    <time class="date">{experience.date}</time>

    <h3 class="role">{experience.title}</h3>
    <p class="company text-custom-green">{experience.company}</p>

    {experience.usos.length > 0 && (
            <ul class="stack">
                {experience.usos.map((tech) => (
                        <li>{tech}</li>
                ))}
            </ul>
    )}

    <p class="description">{experience.description}</p>

    {experience.aprendizajes && (
            <div class="learning">
                <span class="learning-icon">ðŸ’¡</span>
                <p>
                    <strong>Aprendizajes:</strong> {experience.aprendizajes}
                </p>
            </div>
    )}
</div>

<style>
    /* ===== CARD ===== */

    .card {
        background: rgba(15, 23, 42, 0.95);
        border: 1px solid rgba(34, 197, 94, 0.25);
        border-radius: 16px;
        padding: 1.5rem;
    }

    /* ===== HEADER ===== */

    .date {
        font-size: 0.8rem;
        opacity: 0.7;
    }

    .role {
        font-size: 1.2rem;
        margin-top: 0.25rem;
    }

    .company {
        font-weight: 500;
        margin-bottom: 0.75rem;
    }

    /* ===== STACK ===== */

    .stack {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
        margin-bottom: 0.75rem;
    }

    .stack li {
        font-size: 0.75rem;
        padding: 0.25rem 0.6rem;
        border-radius: 999px;
        background: rgba(34, 197, 94, 0.15);
        /*color: #6bb184;*/
    }

    /* ===== TEXT ===== */

    .description {
        font-size: 0.9rem;
        line-height: 1.4;
        opacity: 0.85;
    }

    /* ===== LEARNING BLOCK ===== */

    .learning {
        margin-top: 1rem;
        padding: 0.75rem 1rem;
        border-radius: 12px;
        display: flex;
        gap: 0.6rem;
        align-items: flex-start;

        background: linear-gradient(
                135deg,
                rgba(34, 197, 94, 0.12),
                rgba(34, 197, 94, 0.04)
        );

        border: 1px dashed rgba(34, 197, 94, 0.35);
    }

    .learning-icon {
        font-size: 1.1rem;
        line-height: 1.2;
    }

    .learning p {
        font-size: 0.85rem;
        line-height: 1.4;
    }

    .learning strong {
        color: var(--custom-green, #6bb184);
    }
</style>
<script>
    const timeline = document.getElementById('timeline')
    const line = timeline?.querySelector('.timeline-line')

    function updateLineWidth() {
        if (!timeline || !line) return
        line.style.width = timeline.scrollWidth + 'px'
    }

    updateLineWidth()
    window.addEventListener('resize', updateLineWidth)
</script>
